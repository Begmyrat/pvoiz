<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="20dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="20dp"
    android:backgroundTint="@color/colorGrayLight"
    android:background="@drawable/rounded_background">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="100dp"
        app:cardElevation="0dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="@color/colorGrayLight">

        <ImageView
            android:id="@+id/i_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:src="@drawable/ic_speaker"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/t_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gunung Salman"
        app:layout_constraintLeft_toRightOf="@+id/cardview"
        app:layout_constraintTop_toTopOf="@+id/cardview"
        android:textColor="@color/colorTextPrimary"
        android:fontFamily="@font/open_sans_semi_bold"
        android:layout_marginLeft="10dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/t_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/t_title"
        app:layout_constraintBottom_toBottomOf="@+id/cardview"
        android:text="Cankaya, Ankara, Turkiye"
        android:textSize="12sp"
        android:ellipsize="end"
        android:maxLines="1"
        android:fontFamily="@font/open_sans_bold"/>

    <ImageView
        android:id="@+id/i_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_more_horizontal"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/cardview"
        android:layout_marginRight="20dp"/>
    
    <TextView
        android:id="@+id/t_play"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Dinle"
        android:gravity="center"
        android:fontFamily="@font/open_sans_bold"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/rounded_bottom_background"
        android:backgroundTint="@color/colorRedLight"/>



</androidx.constraintlayout.widget.ConstraintLayout>