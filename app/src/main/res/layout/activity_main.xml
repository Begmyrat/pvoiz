<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">

    <fragment
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/map"
        tools:context=".MapsActivity"
        android:name="com.google.android.gms.maps.SupportMapFragment" />

    <View
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/mapscreentop"/>

    <ImageView
        android:id="@+id/i_allOrPrivate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/all_or_private"
        app:layout_constraintBottom_toTopOf="@+id/i_add"
        app:layout_constraintHorizontal_bias="0.06"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.060000002" />

    <ImageView
        android:id="@+id/i_searchBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/search_box"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="@+id/i_allOrPrivate"
        app:layout_constraintTop_toBottomOf="@+id/i_allOrPrivate"/>

    <ImageView
        android:id="@+id/i_loupe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/loupe"
        app:layout_constraintBottom_toBottomOf="@id/i_searchBox"
        app:layout_constraintHorizontal_bias="0.06"
        app:layout_constraintLeft_toLeftOf="@id/i_searchBox"
        app:layout_constraintRight_toRightOf="@+id/i_searchBox"
        app:layout_constraintTop_toTopOf="@id/i_searchBox"
        app:layout_constraintVertical_bias="0.4" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintVertical_bias="0.4"
        android:hint="Search location"
        android:textSize="14sp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/quicksand_regular"
        android:textColor="@color/secondtextcolor"
        android:textColorHint="@color/secondtextcolor"
        app:layout_constraintLeft_toRightOf="@+id/i_loupe"
        app:layout_constraintTop_toTopOf="@+id/i_searchBox"
        app:layout_constraintBottom_toBottomOf="@+id/i_searchBox"
        app:layout_constraintRight_toRightOf="@+id/i_searchBox"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/mapscreenbottom"/>

    <ImageView
        android:id="@+id/i_location"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="20dp"
        android:onClick="clickLocationButton"
        android:src="@drawable/map_location_croos"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <ImageView
        android:id="@+id/i_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="clickRecordButton"
        android:src="@drawable/add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.93" />

    <ImageView
        android:id="@+id/i_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/home"
        app:layout_constraintRight_toLeftOf="@+id/i_social"
        app:layout_constraintTop_toTopOf="@+id/i_add"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        android:textColor="@color/secondtextcolor"
        android:fontFamily="@font/quicksand_regular"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@+id/i_home"
        app:layout_constraintRight_toRightOf="@+id/i_home"
        app:layout_constraintTop_toBottomOf="@+id/i_home"/>

    <ImageView
        android:id="@+id/i_social"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/social"
        app:layout_constraintTop_toTopOf="@+id/i_home"
        app:layout_constraintBottom_toBottomOf="@+id/i_home"
        app:layout_constraintLeft_toRightOf="@+id/i_home"
        app:layout_constraintRight_toLeftOf="@+id/i_add" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Social"
        android:textColor="@color/secondtextcolor"
        android:fontFamily="@font/quicksand_regular"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@+id/i_social"
        app:layout_constraintRight_toRightOf="@+id/i_social"
        app:layout_constraintTop_toBottomOf="@+id/i_social"/>

    <ImageView
        android:id="@+id/i_likes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/i_add"
        app:layout_constraintTop_toTopOf="@+id/i_home"
        app:layout_constraintRight_toLeftOf="@+id/i_profile"
        android:src="@drawable/likes"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Likes"
        android:textColor="@color/secondtextcolor"
        android:fontFamily="@font/quicksand_regular"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@+id/i_likes"
        app:layout_constraintRight_toRightOf="@+id/i_likes"
        app:layout_constraintTop_toBottomOf="@+id/i_likes"/>

    <ImageView
        android:id="@+id/i_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/profile"
        app:layout_constraintLeft_toRightOf="@+id/i_likes"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/i_home"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:textColor="@color/secondtextcolor"
        android:fontFamily="@font/quicksand_regular"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@+id/i_profile"
        app:layout_constraintRight_toRightOf="@+id/i_profile"
        app:layout_constraintTop_toBottomOf="@+id/i_profile"/>


</androidx.constraintlayout.widget.ConstraintLayout>