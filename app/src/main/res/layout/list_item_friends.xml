<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="95dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardCornerRadius="30dp">

        <ImageView
            android:id="@+id/i_avatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/girl"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/t_username"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Dima Blan"
        android:fontFamily="@font/quicksand_semi_bold"
        android:textColor="@color/thirdtext"
        android:textSize="18sp"
        android:layout_marginHorizontal="20dp"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintRight_toLeftOf="@+id/i_verify"
        app:layout_constraintLeft_toRightOf="@+id/cardview"
        app:layout_constraintTop_toTopOf="@+id/cardview"
        app:layout_constraintBottom_toBottomOf="@+id/cardview"/>

    <ImageView
        android:id="@+id/i_block"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:src="@drawable/blockpassive"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/i_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/cancelactive"
        android:layout_marginRight="25dp"
        app:layout_constraintRight_toLeftOf="@+id/i_block"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/i_verify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/verifyactive"
        android:layout_marginRight="25dp"
        app:layout_constraintRight_toLeftOf="@+id/i_cancel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:alpha="0.2"
        android:background="@color/secondtextcolor"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>