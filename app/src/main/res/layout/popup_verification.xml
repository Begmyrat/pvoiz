<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="237dp"
    android:layout_height="257dp"
    android:paddingHorizontal="15dp"
    android:paddingVertical="20dp"
    android:backgroundTint="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rounded_background_25">

    <TextView
        android:id="@+id/t_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Are you sure?"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:fontFamily="@font/quicksand_semi_bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/t_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Do you really want to delete these post? This process can not be undone."
        android:textSize="12sp"
        android:layout_marginTop="20dp"
        android:textColor="@color/secondtextcolor"
        android:fontFamily="@font/quicksand_regular"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/b_verify"
        app:layout_constraintTop_toBottomOf="@+id/t_title"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/b_verify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:elevation="0dp"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/quicksand_bold"
        android:textSize="18sp"
        android:stateListAnimator="@null"
        android:textAllCaps="false"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/b_cancel"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/b_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:fontFamily="@font/quicksand_bold"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        android:stateListAnimator="@null"
        android:textColor="@color/secondtextcolor"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>