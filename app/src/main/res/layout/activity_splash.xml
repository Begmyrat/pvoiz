<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ActivitySplash">

    <ImageView
        android:id="@+id/i_logovoiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logovoiz"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.45" />

    <ImageView
        android:id="@+id/i_pvoiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/pvoiz"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/i_logovoiz"
        app:layout_constraintRight_toRightOf="@+id/i_logovoiz"
        app:layout_constraintTop_toBottomOf="@+id/i_logovoiz"
        app:layout_constraintVertical_bias="0.050000012" />

    <TextView
        android:id="@+id/t_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/quicksand_regular"
        android:gravity="center"
        android:text="Listen and Pin all of the Voiz\naround the World!"
        android:textColor="@color/secondtextcolor"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/i_pvoiz"
        app:layout_constraintVertical_bias="0.050000012" />

</androidx.constraintlayout.widget.ConstraintLayout>